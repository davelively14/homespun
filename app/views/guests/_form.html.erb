<%= form_for(@guest) do |f| %>
  <% if @guest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@guest.errors.count, "error") %> prohibited this guest from being saved:</h2>

      <ul>
      <% @guest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row panel">
    <%= f.text_field :email, placeholder: 'Email', required: true %>
    <%= fields_for :address, @guest.address do |a| %>
      <%= a.text_field :street1, placeholder: 'Street Address', required: true %>
      <%= a.text_field :street2, placeholder: 'Unit Number (optional)' %>
      <%= a.text_field :city, placeholder: 'City', required: true %>
      <%= a.text_field :state, placeholder: 'State', required: true %>
      <%= a.text_field :zip, placeholder: 'Zip', required: true %>
    <% end %>
    <%= f.submit "Continue", class: 'button small radius right' %>
  </div>
<% end %>
