<div class="row">
  <div class="large-12 columns">
    <div class="row">
      <div class="large-3 small-12 columns">
        <div class="row panel">
          <h2><%= @store.name %></h2>
          <p><%= @store.description %></p>
          <%= link_to 'Return to Storefront', store_path(@store.id), class: 'button info radius small expand' %>
        </div>
        <div class="row panel">
          <%= link_to 'Edit Product', edit_product_path(@product), class: 'button info radius small expand' %>
        </div>
      </div>
      <div class="large-3 small-4 columns">
        <%= image_tag(@product.image_url) %>
      </div>
      <div class="large-6 small-8 columns">
        <h1><%= @product.name %></h1>
        <p><%= @product.description %></p>
        <p class="text-right"><%= @product.list_price %></p>
        <p>Manufactured by: <%= @product.mfger %></p>
        <p>Model Number: <%= @product.model %></p>
        <% if @product.in_stock %>
          <%= link_to 'Add to Cart', '#', class: 'button success round small right' %>
        <% end %>
      </div>
    </div>
  </div>

</div>
