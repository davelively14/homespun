
<div class="row">
  <h1 class="text-center"><strong>Checkout</strong></h1>
  <% if current_user %>
    <%= render 'form' %>
  <% else %>
    <div class="small-12 medium-6 large-6 columns">
      <h3 class="text-center">Login</h3>
      <div class="row panel">
        <!-- TODO: DRY w/ devise login page -->
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="container">
            <div class="row">
              <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
              <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
            </div>
            <% if devise_mapping.rememberable? -%>
              <div class="row">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>
            <div class="row">
              <%= f.submit "Log in", class: "button radius right" %>
              <%= link_to "Signup", new_user_registration_path, class: "button info radius right" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="small-12 medium-6 large-6 columns">
      <h3 class="text-center">Proceed without login</h3>
    </div>
  <% end %>
</div>