<div class="row">
  <div class="small-3 columns panel">
    <h1><%= current_user.username %></h1>

      <h5><%= @user.first_name %> <%= @user.last_name %></h5>
      <p><%= @user.email %></p>

    <%= link_to 'Edit Info', edit_user_registration_path(@user), class:  "button info radius small expand" %>
  </div>
  <div class="small-9 columns">
    <% if current_user.role == 'artisan' %>
      <h2>Artisan Dashboard</h2>
      <p>
        <%= link_to 'Artisans list', artisans_path %> |
        <%= link_to 'Create Store', new_store_path %> |
        <%= link_to 'Create Store Association', new_artisan_path %>
      </p>
    <% elsif current_user.role == 'customer' %>
      <h2>Dashboard</h2>
    <% else %>
      <h2>Admin Dashboard</h2>
    <% end %>

  </div>
</div>
