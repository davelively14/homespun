<div class="row">
  <h1 class="text-center">Link to a Store</h1>

  <h3 class="text-center">Create a New Store</h3>
  <%= render 'form' %>

  <h3 class="text-center">Join an Existing Store</h3>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Owner</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <%= render @stores %>
    </tbody>
  </table>

  <%= link_to 'Back', artisans_path %>
</div>